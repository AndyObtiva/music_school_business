<div id="<%= dom_id music_class %>">
  <p>
    <strong>Session:</strong>
    <%= "#{music_class.session.season} #{music_class.session.year}" %>
  </p>

  <p>
    <strong>Instructor:</strong>
    <%= music_class.instructor.full_name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= music_class.location.name %>
  </p>

  <p>
    <strong>Music class series:</strong>
    <%= music_class.music_class_series_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= music_class.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= music_class.description %>
  </p>

  <p>
    <strong>Level:</strong>
    <%= music_class.level %>
  </p>

  <p>
    <strong>Day:</strong>
    <%= music_class.day %>
  </p>

  <p>
    <strong>Lesson count:</strong>
    <%= music_class.lesson_count %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= music_class.duration %>
  </p>

  <p>
    <strong>Capacity:</strong>
    <%= music_class.capacity %>
  </p>

  <p>
    <strong>Enrollments:</strong>
    <%= music_class.customers.count %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= music_class.price %>
  </p>
  
  <p>
    <% if music_class.enrolled?(current_customer) %>
      <%= form_for [:cancel_enrollment, music_class], method: :post do |f| %>
        <%= f.submit 'Cancel Enrollment' %>
      <% end %>
    <% else %>
      <%= form_for [:enroll, music_class], method: :post do |f| %>
        <%= f.submit 'Enroll' %>
      <% end %>
    <% end %>
  </p>
</div>
